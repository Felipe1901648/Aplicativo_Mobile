<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.faculdade.rubik">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rubik">
        <activity android:name=".PneuActivity"
            android:theme="@style/AppTheme.Toolbar"></activity>
        <activity
            android:name=".OleoActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".EletricaActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".ConfigActivity" />
        <activity android:name=".activityMenu" />
        <activity android:name=".DebugActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisciplinaActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName=".EletricaActivity"></activity>
    </application>

</manifest>